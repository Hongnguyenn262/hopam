  // Lấy tất cả thẻ <a> gốc
  const links = [...entryLabels.querySelectorAll("a.label-link")];

  let caSi = [], giaiDieu = [], sangTac = [], theLoai = [];

  links.forEach(link => {
    let name = link.textContent.trim();
    if (caSiList.includes(name)) caSi.push(link.outerHTML);
    else if (giaiDieuList.includes(name)) giaiDieu.push(link.outerHTML);
    else if (sangTacList.includes(name)) sangTac.push(link.outerHTML);
    else if (theLoaiList.includes(name)) theLoai.push(link.outerHTML);
  });

  // Tạo HTML mới
  let html = "<div class='custom-tags'>";
  if (theLoai.length) html += "<div class='tag-row'>Thể Loại: " + theLoai.join(", ") + " Điệu: " + giaiDieu.join(", ") +" </div>";
  if (sangTac.length) html += "<div class='tag-row'>Sáng tác: " + sangTac.join(", ") +" </div>";
  if (caSi.length) html += "<div class='tag-row'> Ca sĩ: " + caSi.join(" ") + "</div>";
  html += "</div>";

  // Ghi đè lên block cũ
  entryLabels.innerHTML = html;
});
